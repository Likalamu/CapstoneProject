@{
    ViewData["Title"] = "Admin Page";
}

@model List<CapstoneTranslator.Models.Job>

    <style>
        html {
            margin: 0;
            padding: 0;
            border: 0;
            font-size: 20px;
            font: serif;
            vertical-align: baseline;
        }

        body {
            font: 80% georgia, sans-serif;
            line-height: 1;
            color: black;
            background-color: lightblue;
            /*background-image: url("https://www.vpr.org/sites/vpr/files/styles/x_large/public/201708/Languages-istock-Qvasimodo-20170803.png");*/
        }

        p {
            margin-top: 0;
            text-align: justify;
            letter-spacing: 1px;
            line-height: 1.6;
        }

        footer {
            color: black;
            background-color: whitesmoke;
        }

        #highlight {
            background-color: transparent;
            text-align: center;
            width: 100%;
        }

        h3.fontCustom {
            font: Impact, sans-serif;
            color: red;
        }

        img {
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 40%;
        }
    </style>

    <div class="text-center">
        <h2 class="display-4">Admin page!</h2>
        <p><a asp-controller="Admin" asp-action="AddJob">Add Jobs</a></p>
        <p><a asp-controller="List" asp-action="Index">List Jobs</a></p>
        <p><a asp-controller="Search" asp-action="Index">Search Jobs</a></p>
    </div>

    @if (Model.Count == 0)
    {
        <p>No jobs yet!</p>
    }
    else
    {
        <table class="table">
            <tr>
                <th>Position Name</th>
                <th>Employer</th>
            </tr>
            @foreach (Job job in Model)
            {
                <tr>
                    <td><a asp-controller="Admin" asp-action="Detail" asp-route-id="@job.Id">@job.Name</a></td>
                    <td>@job.Employer.Name</td>
                </tr>
            }
        </table>
    }
