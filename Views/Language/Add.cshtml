@model CapstoneTranslator.Models.Language

<style>
    html {
        margin: 0;
        padding: 0;
        border: 0;
        font-size: 20px;
        font: serif;
        vertical-align: baseline;
    }

    body {
        font: 80% georgia, sans-serif;
        line-height: 1;
        color: black;
        background-color: lightblue;
        /*background-image: url("https://www.vpr.org/sites/vpr/files/styles/x_large/public/201708/Languages-istock-Qvasimodo-20170803.png");*/
    }

    p {
        margin-top: 0;
        text-align: justify;
        letter-spacing: 1px;
        line-height: 1.6;
    }

    footer {
        color: black;
        background-color: whitesmoke;
    }

    #highlight {
        background-color: transparent;
        text-align: center;
        width: 100%;
    }

    h3.fontCustom {
        font: Impact, sans-serif;
        color: red;
    }

    img {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 40%;
    }
</style>


        <h1>Add New Language</h1>

        <form asp-controller="Language" asp-action="Add" method="post">
            <div class="form-group">
                <label asp-for="Name">Language Name</label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Language Description</label>
                <input asp-for="Description" />
                <span asp-validation-for="Description"></span>
            </div>
            <input type="submit" value="Submit" />
        </form>
   
